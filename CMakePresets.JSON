{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja",
      "description": "Build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_MAKE_PROGRAM": "D:/APPS/interpreter/ninja-win/ninja.exe",
        "CMAKE_C_COMPILER": "D:/APPS/interpreter/LLVM/bin/clang-cl.exe",
        "CMAKE_CXX_COMPILER": "D:/APPS/interpreter/LLVM/bin/clang-cl.exe"
      }
    }
  ]
}
